{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "molecule: list",
            "type": "debugpy",
            "request": "launch",
            "module": "molecule",
            "args": [
                // molecule --debug -vvv list
                "--debug", "-vvv",
                "list"
            ],
            "justMyCode": false
        },
        {
            "name": "molecule: test ubuntu2004",
            "type": "debugpy",
            "request": "launch",
            "module": "molecule",
            "args": [
                // molecule --debug -vvv test --scenario-name ubuntu2004
                "--debug", "-vvv",
                "test",
                "--scenario-name", "ubuntu2004"
            ],
            "env": {
                "ANSIBLE_CONFIG": "${workspaceFolder}/molecule/ansible.old-galaxy.cfg"
            },
            "justMyCode": false
        }
    ]
}
