{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "molecule: list",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "molecule list"
        },
        {
            "label": "molecule: test all@cgroupv1",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ANSIBLE_CONFIG": "${workspaceFolder}/molecule/ansible.old-galaxy.cfg"
                }
            },
            "command": [
                "[ -d /sys/fs/cgroup/memory ] || { echo 'not cgroupv1 host'; exit 1; }",
                "&& molecule test --scenario-name ubuntu2004@cgroupv1",
                "&& molecule test --scenario-name ubuntu1804@cgroupv1",
                "&& molecule test --scenario-name ubuntu1604@cgroupv1",
                "&& molecule test --scenario-name debian10@cgroupv1",
                "&& molecule test --scenario-name debian9@cgroupv1",
                "&& molecule test --scenario-name centos8@cgroupv1",
                "&& molecule test --scenario-name centos7@cgroupv1"
            ]
        }
    ]
}
